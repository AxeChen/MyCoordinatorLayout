<?xml version="1.0" encoding="utf-8"?>
<com.mg.axe.mycoordinatorlayout.base.MyCoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mg.axe.mycoordinatorlayout.MainActivity">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@mipmap/fj"
        app:layout_behavior="com.mg.axe.mycoordinatorlayout.ImageViewBehavior" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="com.mg.axe.mycoordinatorlayout.ToolbarBehavior" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/img">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/test_text" />

    </android.support.v4.widget.NestedScrollView>

</com.mg.axe.mycoordinatorlayout.base.MyCoordinatorLayout>
